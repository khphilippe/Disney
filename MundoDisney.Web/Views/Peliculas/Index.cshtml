@model IEnumerable<MundoDisney.Web.Data.Pelicula>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.ImageFullPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@item.ImageFullPath" style="width:100px;height:100px;max-width: 100%; height: auto;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PeliculaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PeliculaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PeliculaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
